{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es2022",
        "module": "ESNext",
        "moduleResolution": "node",
        "verbatimModuleSyntax": false,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "isolatedModules": true
    }
}
