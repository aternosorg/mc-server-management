{
    "compilerOptions": {
        "outDir": "build",
        "target": "es2022",
        "module": "node16",
        "moduleResolution": "node16",
        "verbatimModuleSyntax": false,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    }
}
